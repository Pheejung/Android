<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.userinterface1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Fragment"
            android:label="@string/app_info"></activity>
        <activity android:name=".Category.muscleActivity"
            android:label="@string/app_heart"/>
        <activity android:name=".Category.stomachActivity"
            android:label="@string/app_stomach"/>
        <activity android:name=".Category.neckActivity"
            android:label="@string/app_throat"/>
        <activity android:name=".Category.headActivity"
            android:label="@string/app_head"/>
        <activity android:name=".IntroActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity"
            android:label="@string/app_search"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".InfoActivity" />
        <activity android:name=".CategoryActivity"
            android:label="@string/app_category"/>
        <activity android:name=".MainActivity" />
    </application>

</manifest>